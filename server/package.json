{
  "name": "arena-matrix-backend",
  "version": "1.0.0",
  "description": "Backend API for Arena Matrix - Jiu-Jitsu Academy Management System",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "seed": "ts-node src/scripts/seedDatabase.ts",
    "setup": "npm install && ts-node src/scripts/setup.ts",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop arena-hub-api",
    "pm2:restart": "pm2 restart arena-hub-api",
    "pm2:logs": "pm2 logs arena-hub-api",
    "pm2:monit": "pm2 monit",
    "optimize:db": "ts-node src/scripts/optimizeDatabase.ts",
    "sync:db": "ts-node src/scripts/sync_db.ts",
    "production": "NODE_ENV=production npm run build && NODE_ENV=production pm2 start ecosystem.config.js --env production"
  },
  "keywords": [
    "arena",
    "jiu-jitsu",
    "management",
    "api",
    "mongodb"
  ],
  "author": "Arena Jiu-Jitsu",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.0",
    "bcryptjs": "^3.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "mercadopago": "^2.11.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "nodemon": "^3.1.11",
    "tailwindcss": "^4.1.18"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
