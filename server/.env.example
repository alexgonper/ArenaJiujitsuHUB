# Arena Matrix Backend Configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/arena-matrix
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/arena-matrix

# API Configuration
API_PREFIX=/api/v1

# Security
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Gemini AI Integration
GEMINI_API_KEY=

# Optional: Email Service (for notifications)
EMAIL_SERVICE=
EMAIL_USER=
EMAIL_PASSWORD=
